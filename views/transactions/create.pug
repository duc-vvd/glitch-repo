extends ../layouts/common

block content

  h1 New transaction

  form(action="/transactions/create", method="POST").form-group.row
    .col-6.p-2
      label User name: 
      select.form-control(name="userId")
        each user in users
          option(value=user.id) #{user.name}
    .col-6.p-2
      label Book title: 
      select.form-control(name="bookId")
        each book in books
          option(value=book.id) #{book.title}
    button.btn.btn-success.m-2 Create