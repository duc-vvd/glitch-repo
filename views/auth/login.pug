extends ../layouts/common

block content

  h1 Login
  if errors
    each error in errors
      .alert.alert-danger
        span= error
  form(action="/auth/login", method="POST")
    .form-group.row
      label.col-form-label.col-3 Email 
      input.form-control.col-6(type="text", name="email")
    .form-group.row
      label.col-form-label.col-3 Password
      input.form-control.col-6(type="password", name="password")
    button.btn.btn-success Login