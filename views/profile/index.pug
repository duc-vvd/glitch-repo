extends ../layouts/common

block content

  h1 Profile
  .d-flex.alight-items-center
    .ml-auto
      img.mr-2(src=user.avatarUrl, width="32")
      a.btn.btn-primary(href="/profile/avatar") Change avatar
  
  if errors
    each error in errors
      .alert.alert-danger
        span= error
  form(action='/profile', method='post')
    input(type="hidden", name="id", value=user.id)
    .form-group
      label.mr-2.form-label Name 
      input.mr-2.form-control.col-6(type='text', name="name", value=user?user.name:'')
    .form-group
      label.mr-2.form-label Email 
      input.mr-2.form-control.col-6(type='email', name="email", value=user?user.email:'')
    .form-group
      label.mr-2.form-label Password 
      input.mr-2.form-control.col-6(type='password', name="password")
    .form-group
      label.mr-2.form-label Confirm password 
      input.mr-2.form-control.col-6(type='password', name="confirmPassword")
    button.btn.btn-primary Update